pragma solidity ^0.8.0;

contract Task_Fibonacci {
    // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –Ω–∞—Ö–æ–∂–¥–µ–Ω–∏—è –ø–µ—Ä–≤–æ–≥–æ —á–∏—Å–ª–∞ –§–∏–±–æ–Ω–∞—á—á–∏, –ø—Ä–µ–≤—ã—à–∞—é—â–µ–≥–æ n
    function generateFibo(uint256 n) public pure returns (uint256) {
        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –≥—Ä–∞–Ω–∏—á–Ω—ã—Ö —Å–ª—É—á–∞–µ–≤
        if (n == 0) return 1;  // –ü–µ—Ä–≤–æ–µ —á–∏—Å–ª–æ –§–∏–±–æ–Ω–∞—á—á–∏ > 0 —ç—Ç–æ 1
        if (n == 1) return 2;  // –ü–µ—Ä–≤–æ–µ —á–∏—Å–ª–æ –§–∏–±–æ–Ω–∞—á—á–∏ > 1 —ç—Ç–æ 2
        
        uint256 prev = 1;      // F(1) = 1
        uint256 current = 2;   // F(2) = 2
        uint256 next;
        
        // üîµ –¶–ò–ö–õ DO-WHILE: –≤—ã–ø–æ–ª–Ω—è–µ–º —Ö–æ—Ç—è –±—ã –æ–¥–∏–Ω —Ä–∞–∑!
        do {
            next = prev + current;  // —Å–ª–µ–¥—É—é—â–µ–µ —á–∏—Å–ª–æ –§–∏–±–æ–Ω–∞—á—á–∏
            prev = current;         // —Å–¥–≤–∏–≥–∞–µ–º
            current = next;        // —Å–¥–≤–∏–≥–∞–µ–º
        } while (current <= n);    // –ø–æ–∫–∞ –Ω–µ –ø—Ä–µ–≤—ã—Å–∏–º n
        
        return current;
    }
}